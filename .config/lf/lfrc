# Open hovered directory in GUI file manager
map <c-o> &{{
    if [[ -d "$f" ]]; then
        xdg-open "$f"
        exit
    fi

    # If it's a file, open the containing dir
    if [[ -f "$f" ]]; then
        xdg-open $(dirname "$f")
        exit
    fi
}}

